insert into projeto (nome_projet)
values('Lembra+'),
('Calmind'),
('Rastreamento'),
('Terra Segura');


UPDATE projeto 
SET nome_projet = "psiu" WHERE nome_projet = 'Lembra+';
select nome_projet from projeto;

UPDATE projeto 
SET nome_projet = "conectart" WHERE nome_projet = 'Calmind';
select nome_projet from projeto;

UPDATE projeto 
SET nome_projet = "Pronext" WHERE nome_projet = 'Rastreamento';
select nome_projet from projeto;

UPDATE projeto 
SET nome_projet = "investup" WHERE nome_projet = 'Terra Segura';
select nome_projet from projeto;
	

