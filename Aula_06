SELECT MAX(id_funcionario) FROM funcionario; -- 10
SELECT MIN(id_funcionario) FROM funcionario; -- 1
SELECT AVG(id_funcionario) FROM funcionario; -- 5.5000
SELECT SUM(id_funcionario) FROM funcionario; -- 55

SELECT MAX(id_departamento) FROM departamento; -- 3
SELECT MIN(id_departamento) FROM departamento ;-- 1
SELECT AVG(id_departamento) FROM departamento; -- 2.0000
SELECT SUM(id_departamento) FROM departamento; -- 6

